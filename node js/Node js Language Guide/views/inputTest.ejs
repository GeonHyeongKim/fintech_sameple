<html>
<h1>로그인</h1>
<hr />
아이디 :
<input type="text" id="userId" /><br />
비밀번호 :
<input type="password" id="userPassword" /><br />
<button type="button" id="loginBtn">로그인</button>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script>
  // $("#")
  $("#loginBtn").click(function () { // 버튼 이벤트 / input 데이터 가져오기 완료
    var userId = $("#userId").val(); // id 값 가져오기
    var userPassword = $("#userPassword").val(); // password 값 가져오기

    console.log(userId, userPassword); 
    $.ajax({ //로그인 정보 전달 ajax 코드 및 라우터 완성
      url: "/getLoginData",
      type: 'POST',
      data: { // 리퀘스트 바디 허용 코드 추가
        ajaxUserId: userId, 
        ajaxUserPassword: userPassword,
      },
      success: function (response) {
        console.log(response);
      }
    })
  });
</script>

</html>